# Takara Gold Backend - Environment Configuration Example
# Copy this file to .env and fill in your actual values

NODE_ENV=production
PORT=3000
APP_VERSION=2.1.1

# Database
# PostgreSQL connection string format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/takara_gold

# JWT Security
# Generate a secure random string (minimum 32 characters)
# Example: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-CHANGE-THIS
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# Frontend
FRONTEND_URL=https://sitpool.org

# CORS
CORS_ORIGIN=https://sitpool.org

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Platform Wallet (Solana)
# Your platform wallet public address
PLATFORM_WALLET=YourPublicWalletAddressHere

# CRITICAL: Never commit this to git!
# Generate with: solana-keygen new
# Store as base64 encoded secret key
PLATFORM_WALLET_PRIVATE_KEY=your-base64-encoded-private-key-NEVER-COMMIT-THIS

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
ADMIN_RATE_LIMIT_WINDOW_MS=900000
ADMIN_RATE_LIMIT_MAX=5

# Sentry (optional)
SENTRY_DSN=your-sentry-dsn-here
