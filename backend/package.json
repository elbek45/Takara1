{
  "name": "takara-gold-backend",
  "version": "2.1.1",
  "description": "Takara Gold Investment Platform & NFT Marketplace - Backend API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:blockchain": "jest --testPathPattern=blockchain",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "testnet:setup": "node scripts/setup-testnet.js",
    "testnet:db:push": "DATABASE_URL=postgresql://takara:takara_password@localhost:5432/takara_testnet npx prisma db push",
    "testnet:dev": "cp .env.testnet .env && npm run dev",
    "testnet:balance": "node scripts/check-balance.js",
    "deploy:prod": "./deploy.sh"
  },
  "keywords": [
    "solana",
    "defi",
    "nft",
    "takara",
    "laika"
  ],
  "author": "Takara Team",
  "license": "MIT",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@metaplex-foundation/js": "^0.20.1",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.27.0",
    "@sentry/profiling-node": "^10.27.0",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.95.8",
    "@types/web3": "^1.0.20",
    "bcrypt": "^5.1.1",
    "bs58": "^6.0.0",
    "bullmq": "^5.28.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.15.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "nft.storage": "^7.2.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^4.0.0",
    "tweetnacl": "^1.0.3",
    "web3": "^4.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "bcryptjs": "^3.0.3",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
