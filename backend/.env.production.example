# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Server
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/takara_gold

# JWT
JWT_SECRET=your-very-secure-random-secret-min-32-chars
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Blockchain - Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta
TREASURY_WALLET_ADDRESS=your-treasury-wallet-address
TREASURY_PRIVATE_KEY=your-encrypted-private-key

# Token Addresses (Mainnet)
USDT_MINT_ADDRESS=Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB
TAKARA_MINT_ADDRESS=your-takara-token-mint-address
LAIKA_MINT_ADDRESS=your-laika-token-mint-address

# Exchange Rates
LKI_TO_USDT_RATE=0.01

# Blockchain Features (Set to 'true' in production)
ENABLE_REAL_ETH_TRANSFERS=true
ENABLE_REAL_TOKEN_TRANSFERS=true
ENABLE_REAL_NFT_MINTING=true
SKIP_TX_VERIFICATION=false

# Logging
LOG_LEVEL=info

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# NFT Storage
NFT_STORAGE_API_KEY=your-nft-storage-api-key

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
