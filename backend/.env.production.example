# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
PORT=3000

# Database - REQUIRED
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/takara_production

# Security - REQUIRED (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_GENERATE_WITH_OPENSSL
JWT_EXPIRES_IN=7d

# Redis - REQUIRED for production
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PLATFORM_WALLET=YOUR_PLATFORM_WALLET_ADDRESS

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Optional: Admin Login Rate Limiting
ADMIN_RATE_LIMIT_WINDOW_MS=900000
ADMIN_RATE_LIMIT_MAX=5

# Optional: Logging
LOG_LEVEL=info

# Optional: Monitoring (Sentry)
# SENTRY_DSN=https://your-sentry-dsn

# Optional: Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
